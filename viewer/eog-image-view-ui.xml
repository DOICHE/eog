<Root>
  
<commands>
        <cmd name="PrintSetup" _label="Print Set_up" 
             _tip="Setup the page settings for your current printer"/>
        <cmd name="PrintPreview" _label="Print Previe_w..."
             _tip="Previews the image to be printed"
             pixtype="stock" pixname="gtk-print-preview"
	     accel="*Control**Shift*P"/>
        <cmd name="Print" _label="_Print..."
             _tip="Print image to the printer"
	     pixtype="stock" pixname="gtk-print" accel="*Control*P"/>

	<cmd name="SaveAs" _label="Save _As..." 
	     pixtype="stock" pixname="Save As" accel="*Control**Shift*S"/>

	<cmd name="FullScreen"  _label="_Full Screen" accel="F11"/>
	<cmd name="FullScreenHiddenSun"  _label="Full Screen" accel="SunF36" hidden="1"/>
	<cmd name="FlipHorizontal" _label="Flip _Horizontal"/>
	<cmd name="FlipVertical" _label="Flip _Vertical"/>
        <cmd name="Rotate90cw" _label="Rotate C_lockwise"
             pixtype="filename" pixname="eog/stock-rotate-90-16.png"/>
	<cmd name="Rotate90ccw" _label="Rotate Counte_r Clockwise"
             pixtype="filename" pixname="eog/stock-rotate-270-16.png"/>
	<cmd name="Rotate180" _label="Rotate 180 _Degrees"
             pixtype="filename" pixname="eog/stock-rotate-180-16.png"/>

        <cmd name="Undo" _label="_Undo" accel="*Control*z"/>
</commands>

<menu>

    <submenu name="File">
            <placeholder name="File Items Placeholder">
	             <menuitem name="SaveAs" verb=""/>

	             <separator/>
                     <menuitem name="PrintSetup" verb=""/>
		     <menuitem name="PrintPreview" verb=""/>
		     <menuitem name="Print" verb=""/>

            </placeholder>
    </submenu>

    <submenu name="Edit" _label="_Edit">
           <placeholder name="Edit Items Placeholder">
	          <menuitem name="Undo" verb=""/>
	          <separator/>
                  <menuitem name="FlipHorizontal" verb=""/>
                  <menuitem name="FlipVertical" verb=""/>
	          <separator/>
                  <menuitem name="Rotate90cw" verb=""/>
                  <menuitem name="Rotate90ccw" verb=""/>
	          <menuitem name="Rotate180" verb=""/>
           </placeholder>
    </submenu>
  
    <submenu name="View" _label="_View">

            <placeholder name="View Items Placeholder">
  	             <menuitem name="FullScreen" verb=""/>
  	             <menuitem name="FullScreenHiddenSun" verb=""/>
            </placeholder>

 	    <placeholder name="Zoom Items Placeholder" delimit="top"/>
    </submenu>

</menu>

