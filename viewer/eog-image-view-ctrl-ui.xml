<Root>

<commands>
         <cmd name="ZoomIn" _label="_Zoom In" accel="*Control*+"/>
         <cmd name="ZoomOut" _label="Zoom _Out" accel="*Control*-"/>
         <cmd name="ZoomToDefault" _label="_Normal Size" accel="*Control*="/>
         <cmd name="ZoomToFit" _label="Best _Fit"/>
</commands>

<menu>
         <submenu name="View">
	           <placeholder name="Zoom Items Placeholder">
                           <menuitem name="ZoomIn" verb=""/>
			   <menuitem name="ZoomOut" verb=""/>
			   <menuitem name="ZoomToDefault" verb=""/>
			   <menuitem name="ZoomToFit" verb=""/>
    	           </placeholder>
	 </submenu>
</menu>
          
<dockitem name="Toolbar">
         <separator/>
         <toolitem name="ZoomIn" _label="In" verb="" pixtype="stock"
         	   pixname="gtk-zoom-in"/>
         <toolitem name="ZoomOut" _label="Out" verb="" pixtype="stock"
         	   pixname="gtk-zoom-out"/>
         <toolitem name="ZoomToDefault" _label="Normal" verb=""  pixtype="stock"
         	   pixname="gtk-zoom-100"/>
         <toolitem name="ZoomToFit" _label="Fit" verb="" pixtype="stock"
         	   pixname="gtk-zoom-fit"/>
</dockitem>"

</Root>