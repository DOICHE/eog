<Root>

<commands>
         <cmd name="ZoomIn" _label="_Zoom In" accel="*Control*plus"
              pixtype="stock" pixname="gtk-zoom-in"/>
         <cmd name="ZoomOut" _label="Zoom _Out" accel="*Control*minus"
              pixtype="stock" pixname="gtk-zoom-out"/>
         <cmd name="ZoomToDefault" _label="_Normal Size" accel="*Control*equal"
              pixtype="stock" pixname="gtk-zoom-100"/>
         <cmd name="ZoomToFit" _label="Best _Fit"
              pixtype="stock" pixname="gtk-zoom-fit"/>
</commands>

<menu>
         <submenu name="View">
	           <placeholder name="Zoom Items Placeholder">
                           <menuitem name="ZoomIn" verb=""/>
			   <menuitem name="ZoomOut" verb=""/>
			   <menuitem name="ZoomToDefault" verb=""/>
			   <menuitem name="ZoomToFit" verb=""/>
    	           </placeholder>
	 </submenu>
</menu>
          
<dockitem name="Toolbar">
         <separator/>
         <toolitem name="ZoomIn" _label="In" verb=""/>
         <toolitem name="ZoomOut" _label="Out" verb=""/>
         <toolitem name="ZoomToDefault" _label="Normal" verb=""/>
         <toolitem name="ZoomToFit" _label="Fit" verb=""/>
</dockitem>"

</Root>